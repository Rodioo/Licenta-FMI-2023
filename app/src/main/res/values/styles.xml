<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/md_theme_dark_primary</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="numberPicker">
        <item name="android:textColorPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="android:colorControlActivated">@color/md_theme_dark_primary</item>
        <item name="android:colorControlHighlight">@color/md_theme_dark_primaryContainer</item>
        <item name="android:colorControlNormal">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>